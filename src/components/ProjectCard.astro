---
import { getOptimizedImageUrl } from '../lib/cloudinary';

export interface Props {
  title: string;
  description: string;
  technologies: string[];
  imageUrl?: string;
  projectUrl?: string;
  githubUrl?: string;
  results?: {
    metric: string;
    value: string;
  }[];
}

const { title, description, technologies, imageUrl, projectUrl, githubUrl, results } = Astro.props;
const optimizedImage = imageUrl ? getOptimizedImageUrl(imageUrl, { width: 600, height: 400 }) : '/placeholder.jpg';
---

<article class="card group hover:scale-[1.02] transition-transform duration-300">
  <div class="relative overflow-hidden rounded-lg mb-4">
    <img
      src={optimizedImage}
      alt={title}
      loading="lazy"
      class="w-full h-48 object-cover group-hover:scale-110 transition-transform duration-500"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
  </div>
  
  <h3 class="text-xl font-bold mb-2 gradient-text">{title}</h3>
  <p class="text-gray-600 dark:text-gray-400 mb-4">{description}</p>
  
  {results && (
    <div class="mb-4 p-3 bg-teal-50 dark:bg-teal-900/20 rounded-lg">
      <p class="text-sm font-semibold text-teal-700 dark:text-teal-400 mb-2">Key Results:</p>
      <div class="space-y-1">
        {results.map(result => (
          <div class="flex items-center text-sm">
            <span class="i-carbon-checkmark-filled w-4 h-4 text-teal-600 mr-2"></span>
            <span class="font-medium">{result.value}</span>
            <span class="text-gray-600 dark:text-gray-400 ml-1">{result.metric}</span>
          </div>
        ))}
      </div>
    </div>
  )}
  
  <div class="flex flex-wrap gap-2 mb-4">
    {technologies.map(tech => (
      <span class="px-2 py-1 text-xs font-medium bg-gray-200 dark:bg-gray-700 rounded-full">
        {tech}
      </span>
    ))}
  </div>
  
  <div class="flex gap-4">
    {projectUrl && (
      <a
        href={projectUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="icon-btn flex items-center gap-1"
      >
        <span class="i-carbon-link w-5 h-5"></span>
        <span class="text-sm">Live Demo</span>
      </a>
    )}
    {githubUrl && (
      <a
        href={githubUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="icon-btn flex items-center gap-1"
      >
        <span class="i-carbon-logo-github w-5 h-5"></span>
        <span class="text-sm">Code</span>
      </a>
    )}
  </div>
</article>