---
import MinimalLayout from '../layouts/MinimalLayout.astro';
import { getOptimizedImageUrl } from '../lib/cloudinary';

// Mock data for now - will be replaced with Contentful
const projects = [
  {
    id: 1,
    title: "Enterprise SaaS Platform",
    client: "TechCorp",
    year: "2024",
    category: "Full Stack Development",
    image: "portfolio/project-1",
    slug: "enterprise-saas"
  },
  {
    id: 2,
    title: "Real-Time Analytics Dashboard",
    client: "DataFlow Inc",
    year: "2024",
    category: "Data Visualization",
    image: "portfolio/project-2",
    slug: "analytics-dashboard"
  },
  {
    id: 3,
    title: "E-Commerce Optimization",
    client: "ShopMax",
    year: "2023",
    category: "Performance Engineering",
    image: "portfolio/project-3",
    slug: "ecommerce-optimization"
  },
  {
    id: 4,
    title: "AI Content Management",
    client: "ContentAI",
    year: "2023",
    category: "Machine Learning",
    image: "portfolio/project-4",
    slug: "ai-cms"
  },
  {
    id: 5,
    title: "Cloud Migration Strategy",
    client: "FinanceHub",
    year: "2023",
    category: "Cloud Architecture",
    image: "portfolio/project-5",
    slug: "cloud-migration"
  },
  {
    id: 6,
    title: "Mobile Banking App",
    client: "NextGen Bank",
    year: "2022",
    category: "Mobile Development",
    image: "portfolio/project-6",
    slug: "mobile-banking"
  }
];

const clients = [
  "TechCorp", "DataFlow", "ShopMax", "ContentAI", "FinanceHub", "NextGen Bank",
  "CloudFirst", "DevOps Pro", "ScaleUp", "InnovateLab"
];
---

<MinimalLayout>
  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-container">
      <div class="hero-content">
        <h1 class="hero-title">
          <span class="line">Full Stack</span>
          <span class="line">Developer</span>
        </h1>
        <p class="hero-subtitle">
          Building scalable enterprise solutions with modern technologies.
          <br />Specializing in React, Node.js, and cloud architecture.
        </p>
        <div class="hero-cta">
          <a href="mailto:oscar@oscargalindo.dev" class="btn-primary">
            Get in touch
          </a>
          <a href="#projects" class="btn-secondary">
            View projects
          </a>
        </div>
      </div>
      <div class="hero-visual">
        <div class="hero-image-wrapper">
          <img
            src="/hero-bg.jpg"
            alt="Oscar Galindo"
            class="hero-image"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section class="about">
    <div class="about-container">
      <div class="about-content">
        <h2 class="about-title">About</h2>
        <p class="about-text">
          Senior Full Stack Developer with 9+ years of experience building
          high-performance web applications. I specialize in creating scalable
          solutions that drive business growth and enhance user experience.
        </p>
        <div class="about-grid">
          <div class="about-item">
            <h3>Frontend</h3>
            <p>React, Vue.js, Next.js, TypeScript</p>
          </div>
          <div class="about-item">
            <h3>Backend</h3>
            <p>Node.js, Python, GraphQL, REST</p>
          </div>
          <div class="about-item">
            <h3>Cloud & DevOps</h3>
            <p>AWS, Docker, Kubernetes, CI/CD</p>
          </div>
          <div class="about-item">
            <h3>Database</h3>
            <p>PostgreSQL, MongoDB, Redis</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Clients Section -->
  <section class="clients">
    <div class="clients-container">
      <p class="clients-label">Trusted by industry leaders</p>
      <div class="clients-marquee">
        <div class="clients-track">
          {clients.map(client => (
            <span class="client-name">{client}</span>
          ))}
          {clients.map(client => (
            <span class="client-name">{client}</span>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Projects Section -->
  <section class="projects" id="projects">
    <div class="projects-container">
      <h2 class="projects-title">Selected Projects</h2>
      <div class="projects-grid">
        {projects.map((project, index) => (
          <a href={`/projects/${project.slug}`} class="project-card" data-index={index}>
            <div class="project-image-wrapper">
              <img
                src={`https://via.placeholder.com/800x600/1a1a1a/ffffff?text=${project.title}`}
                alt={project.title}
                class="project-image"
                loading="lazy"
              />
            </div>
            <div class="project-info">
              <div class="project-meta">
                <span class="project-client">{project.client}</span>
                <span class="project-year">{project.year}</span>
              </div>
              <h3 class="project-title">{project.title}</h3>
              <p class="project-category">{project.category}</p>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <footer class="contact">
    <div class="contact-container">
      <h2 class="contact-title">Let's work together</h2>
      <p class="contact-subtitle">
        Available for freelance projects and full-time opportunities
      </p>
      <div class="contact-links">
        <a href="mailto:oscar@oscargalindo.dev" class="contact-link">
          oscar@oscargalindo.dev
        </a>
        <div class="contact-socials">
          <a href="https://linkedin.com/in/oscargalindo" target="_blank" rel="noopener" class="social-link">
            LinkedIn
          </a>
          <a href="https://github.com/Oscar-Galindo" target="_blank" rel="noopener" class="social-link">
            GitHub
          </a>
        </div>
      </div>
    </div>
  </footer>

  <style>
    /* Hero Section */
    .hero {
      min-height: 100vh;
      display: flex;
      align-items: center;
      padding: 0 2rem;
      position: relative;
    }

    .hero-container {
      max-width: 1400px;
      margin: 0 auto;
      width: 100%;
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 4rem;
      align-items: center;
    }

    .hero-title {
      font-size: clamp(3rem, 8vw, 7rem);
      font-weight: 900;
      line-height: 0.9;
      letter-spacing: -0.04em;
      margin-bottom: 2rem;
    }

    .hero-title .line {
      display: block;
      overflow: hidden;
    }

    .hero-subtitle {
      font-size: 1.25rem;
      line-height: 1.6;
      color: #a1a1aa;
      margin-bottom: 3rem;
      max-width: 500px;
    }

    .hero-cta {
      display: flex;
      gap: 1.5rem;
      flex-wrap: wrap;
    }

    .btn-primary {
      background: white;
      color: black;
      padding: 1rem 2.5rem;
      border-radius: 50px;
      text-decoration: none;
      font-weight: 500;
      transition: all 0.3s ease;
      display: inline-block;
    }

    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 30px rgba(255,255,255,0.1);
    }

    .btn-secondary {
      color: white;
      padding: 1rem 2.5rem;
      border: 2px solid #27272a;
      border-radius: 50px;
      text-decoration: none;
      font-weight: 500;
      transition: all 0.3s ease;
      display: inline-block;
    }

    .btn-secondary:hover {
      border-color: #52525b;
      background: #18181b;
    }

    .hero-visual {
      position: relative;
      height: 600px;
    }

    .hero-image-wrapper {
      position: relative;
      width: 100%;
      height: 100%;
      border-radius: 20px;
      overflow: hidden;
      background: #18181b;
    }

    .hero-image {
      width: 100%;
      height: 100%;
      object-fit: cover;
      filter: grayscale(100%);
      opacity: 0.8;
    }

    /* About Section */
    .about {
      padding: 8rem 2rem;
      border-top: 1px solid #27272a;
    }

    .about-container {
      max-width: 1400px;
      margin: 0 auto;
    }

    .about-title {
      font-size: 3rem;
      font-weight: 900;
      margin-bottom: 3rem;
      letter-spacing: -0.02em;
    }

    .about-text {
      font-size: 1.5rem;
      line-height: 1.5;
      color: #d4d4d8;
      max-width: 800px;
      margin-bottom: 4rem;
    }

    .about-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 3rem;
    }

    .about-item h3 {
      font-size: 1.125rem;
      font-weight: 600;
      margin-bottom: 0.5rem;
    }

    .about-item p {
      color: #a1a1aa;
      line-height: 1.6;
    }

    /* Clients Section */
    .clients {
      padding: 4rem 0;
      border-top: 1px solid #27272a;
      overflow: hidden;
    }

    .clients-container {
      max-width: 1400px;
      margin: 0 auto;
    }

    .clients-label {
      text-align: center;
      color: #71717a;
      margin-bottom: 3rem;
      font-size: 0.875rem;
      text-transform: uppercase;
      letter-spacing: 0.1em;
    }

    .clients-marquee {
      position: relative;
    }

    .clients-track {
      display: flex;
      gap: 4rem;
      animation: marquee 30s linear infinite;
    }

    .client-name {
      font-size: 2rem;
      font-weight: 700;
      color: #27272a;
      white-space: nowrap;
      transition: color 0.3s ease;
    }

    .client-name:hover {
      color: #52525b;
    }

    @keyframes marquee {
      0% {
        transform: translateX(0);
      }
      100% {
        transform: translateX(-50%);
      }
    }

    /* Projects Section */
    .projects {
      padding: 8rem 2rem;
      border-top: 1px solid #27272a;
    }

    .projects-container {
      max-width: 1400px;
      margin: 0 auto;
    }

    .projects-title {
      font-size: 3rem;
      font-weight: 900;
      margin-bottom: 4rem;
      letter-spacing: -0.02em;
    }

    .projects-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
      gap: 2rem;
    }

    .project-card {
      text-decoration: none;
      color: white;
      display: block;
      transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .project-card:hover .project-image {
      transform: scale(1.05);
      filter: grayscale(0%);
    }

    .project-image-wrapper {
      position: relative;
      padding-bottom: 75%;
      overflow: hidden;
      border-radius: 12px;
      background: #18181b;
      margin-bottom: 1.5rem;
    }

    .project-image {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: all 0.7s cubic-bezier(0.4, 0, 0.2, 1);
      filter: grayscale(100%);
    }

    .project-info {
      padding: 0 0.5rem;
    }

    .project-meta {
      display: flex;
      justify-content: space-between;
      margin-bottom: 0.5rem;
      color: #71717a;
      font-size: 0.875rem;
    }

    .project-card h3 {
      font-size: 1.5rem;
      font-weight: 600;
      margin-bottom: 0.25rem;
      letter-spacing: -0.02em;
    }

    .project-category {
      color: #a1a1aa;
      font-size: 1rem;
    }

    /* Contact Section */
    .contact {
      padding: 8rem 2rem;
      border-top: 1px solid #27272a;
    }

    .contact-container {
      max-width: 1400px;
      margin: 0 auto;
      text-align: center;
    }

    .contact-title {
      font-size: clamp(2.5rem, 6vw, 5rem);
      font-weight: 900;
      margin-bottom: 1rem;
      letter-spacing: -0.02em;
    }

    .contact-subtitle {
      font-size: 1.25rem;
      color: #a1a1aa;
      margin-bottom: 3rem;
    }

    .contact-link {
      font-size: 2rem;
      color: white;
      text-decoration: none;
      transition: opacity 0.3s ease;
      display: inline-block;
      margin-bottom: 2rem;
    }

    .contact-link:hover {
      opacity: 0.7;
    }

    .contact-socials {
      display: flex;
      justify-content: center;
      gap: 2rem;
    }

    .social-link {
      color: #a1a1aa;
      text-decoration: none;
      transition: color 0.3s ease;
    }

    .social-link:hover {
      color: white;
    }

    /* Responsive */
    @media (max-width: 1024px) {
      .hero-container {
        grid-template-columns: 1fr;
      }

      .hero-visual {
        display: none;
      }

      .projects-grid {
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      }
    }

    @media (max-width: 768px) {
      .hero-title {
        font-size: clamp(2.5rem, 10vw, 4rem);
      }

      .about-text {
        font-size: 1.125rem;
      }

      .projects-grid {
        grid-template-columns: 1fr;
      }

      .contact-link {
        font-size: 1.5rem;
      }
    }
  </style>

  <script>
    import gsap from 'gsap';
    import { ScrollTrigger } from 'gsap/ScrollTrigger';

    gsap.registerPlugin(ScrollTrigger);

    // Hero title animation
    gsap.from('.hero-title .line', {
      y: 100,
      opacity: 0,
      duration: 1,
      stagger: 0.1,
      ease: 'power4.out',
    });

    gsap.from('.hero-subtitle', {
      y: 30,
      opacity: 0,
      duration: 1,
      delay: 0.3,
      ease: 'power3.out',
    });

    gsap.from('.hero-cta', {
      y: 30,
      opacity: 0,
      duration: 1,
      delay: 0.5,
      ease: 'power3.out',
    });

    // Projects animation
    const projectCards = document.querySelectorAll('.project-card');
    projectCards.forEach((card, index) => {
      gsap.from(card, {
        scrollTrigger: {
          trigger: card,
          start: 'top bottom-=100',
          toggleActions: 'play none none reverse',
        },
        y: 50,
        opacity: 0,
        duration: 0.8,
        delay: index * 0.1,
        ease: 'power3.out',
      });
    });

    // About section animation
    gsap.from('.about-title', {
      scrollTrigger: {
        trigger: '.about',
        start: 'top center',
      },
      y: 50,
      opacity: 0,
      duration: 1,
      ease: 'power3.out',
    });

    gsap.from('.about-text', {
      scrollTrigger: {
        trigger: '.about',
        start: 'top center',
      },
      y: 30,
      opacity: 0,
      duration: 1,
      delay: 0.2,
      ease: 'power3.out',
    });

    gsap.from('.about-item', {
      scrollTrigger: {
        trigger: '.about-grid',
        start: 'top center+=100',
      },
      y: 30,
      opacity: 0,
      duration: 0.8,
      stagger: 0.1,
      ease: 'power3.out',
    });
  </script>
</MinimalLayout>