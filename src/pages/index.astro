---
import MinimalLayout from '../layouts/MinimalLayout.astro';
import OptimizedImage from '../components/OptimizedImage.astro';
import { getProjects, getSkills, getExperiences } from '../lib/contentful-client';

// Fetch data from Contentful
const projects = await getProjects();
const skills = await getSkills();
const experiences = await getExperiences();

// Group skills by category
const skillsByCategory = skills.reduce((acc, skill) => {
  if (!acc[skill.category]) acc[skill.category] = [];
  acc[skill.category].push(skill);
  return acc;
}, {} as Record<string, typeof skills>);

// Use Contentful projects or fallback to mock data
const displayProjects = projects.length > 0 ? projects : [
  {
    id: 1,
    title: "Enterprise SaaS Platform",
    client: "TechCorp",
    year: "2024",
    category: "Full Stack Development",
    image: "portfolio/project-1",
    slug: "enterprise-saas"
  },
  {
    id: 2,
    title: "Real-Time Analytics Dashboard",
    client: "DataFlow Inc",
    year: "2024",
    category: "Data Visualization",
    image: "portfolio/project-2",
    slug: "analytics-dashboard"
  },
  {
    id: 3,
    title: "E-Commerce Optimization",
    client: "ShopMax",
    year: "2023",
    category: "Performance Engineering",
    image: "portfolio/project-3",
    slug: "ecommerce-optimization"
  },
  {
    id: 4,
    title: "AI Content Management",
    client: "ContentAI",
    year: "2023",
    category: "Machine Learning",
    image: "portfolio/project-4",
    slug: "ai-cms"
  },
  {
    id: 5,
    title: "Cloud Migration Strategy",
    client: "FinanceHub",
    year: "2023",
    category: "Cloud Architecture",
    image: "portfolio/project-5",
    slug: "cloud-migration"
  },
  {
    id: 6,
    title: "Mobile Banking App",
    client: "NextGen Bank",
    year: "2022",
    category: "Mobile Development",
    image: "portfolio/project-6",
    slug: "mobile-banking"
  }
];

const clients = [
  "TechCorp", "DataFlow", "ShopMax", "ContentAI", "FinanceHub", "NextGen Bank",
  "CloudFirst", "DevOps Pro", "ScaleUp", "InnovateLab"
];
---

<MinimalLayout>
  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-bg">
      <img
        src="https://res.cloudinary.com/dkvj1ssup/image/upload/f_auto,q_auto,w_1920,h_1080,c_fill,g_faces/v1/portfolio/oscar-hero"
        alt="Oscar Galindo"
        class="hero-bg-image"
      />
    </div>
    <div class="hero-container">
      <h1 class="hero-name">OSCAR GALINDO</h1>
      <p class="hero-role">Frontend Developer / React Specialist</p>
      <a href="mailto:oscar@oscargalindo.dev" class="hero-cta">
        Get in touch â†’
      </a>
    </div>
  </section>

  <!-- About Section -->
  <section class="about">
    <div class="about-container">
      <div class="about-intro">
        <h2 class="about-greeting">Hi, I'm Oscar,<br/>a frontend developer.</h2>
        <p class="about-text">
          With over a decade of experience building enterprise React applications,
          I work with companies to create intuitive and engaging digital experiences.
        </p>
      </div>
      <div class="about-content">
        <div class="about-grid">
          <div class="about-item">
            <h3>Frontend</h3>
            <p>React, Vue.js, Next.js, TypeScript</p>
          </div>
          <div class="about-item">
            <h3>Backend</h3>
            <p>Node.js, Python, GraphQL, REST</p>
          </div>
          <div class="about-item">
            <h3>Cloud & DevOps</h3>
            <p>AWS, Docker, Kubernetes, CI/CD</p>
          </div>
          <div class="about-item">
            <h3>Database</h3>
            <p>PostgreSQL, MongoDB, Redis</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Clients Section -->
  <section class="clients">
    <div class="clients-container">
      <p class="clients-label">Trusted by industry leaders</p>
      <div class="clients-marquee">
        <div class="clients-track">
          {clients.map(client => (
            <span class="client-name">{client}</span>
          ))}
          {clients.map(client => (
            <span class="client-name">{client}</span>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Projects Section -->
  <section class="projects" id="projects">
    <div class="projects-container">
      <h2 class="projects-title">Selected Projects</h2>
      <div class="projects-grid">
        {displayProjects.map((project, index) => (
          <a href={`/projects/${project.slug}`} class="project-card" data-index={index}>
            <div class="project-image-wrapper">
              <img
                src={`https://via.placeholder.com/800x600/1a1a1a/ffffff?text=${project.title}`}
                alt={project.title}
                class="project-image"
                loading="lazy"
              />
            </div>
            <div class="project-info">
              <div class="project-meta">
                <span class="project-client">{project.client}</span>
                <span class="project-year">{project.year}</span>
              </div>
              <h3 class="project-title">{project.title}</h3>
              <p class="project-category">{project.category}</p>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <footer class="contact">
    <div class="contact-container">
      <h2 class="contact-title">Let's work together</h2>
      <p class="contact-subtitle">
        Available for freelance projects and full-time opportunities
      </p>
      <div class="contact-links">
        <a href="mailto:oscar@oscargalindo.dev" class="contact-link">
          oscar@oscargalindo.dev
        </a>
        <div class="contact-socials">
          <a href="https://linkedin.com/in/oscargalindo" target="_blank" rel="noopener" class="social-link">
            LinkedIn
          </a>
          <a href="https://github.com/Oscar-Galindo" target="_blank" rel="noopener" class="social-link">
            GitHub
          </a>
        </div>
      </div>
    </div>
  </footer>

  <style>
    /* Hero Section */
    .hero {
      height: 100vh;
      position: relative;
      display: flex;
      align-items: center;
      justify-content: center;
      overflow: hidden;
    }

    .hero-bg {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 1;
    }

    .hero-bg-image {
      width: 100%;
      height: 100%;
      object-fit: cover;
      filter: grayscale(100%) brightness(0.3);
    }

    .hero-container {
      position: relative;
      z-index: 2;
      text-align: center;
      padding: 0 2rem;
    }

    .hero-name {
      font-size: clamp(3rem, 10vw, 9rem);
      font-weight: 900;
      letter-spacing: -0.02em;
      margin: 0;
      line-height: 0.9;
      color: white;
      background: linear-gradient(135deg, #fff 0%, rgba(255,255,255,0.8) 100%);
      -webkit-background-clip: text;
      background-clip: text;
      -webkit-text-fill-color: transparent;
    }

    .hero-role {
      font-size: clamp(1rem, 2vw, 1.25rem);
      font-weight: 300;
      letter-spacing: 0.05em;
      color: rgba(255,255,255,0.7);
      margin: 1rem 0 3rem;
    }

    .hero-cta {
      display: inline-block;
      padding: 0.75rem 2rem;
      border: 1px solid rgba(255,255,255,0.3);
      border-radius: 50px;
      color: white;
      text-decoration: none;
      font-size: 0.9rem;
      font-weight: 400;
      letter-spacing: 0.05em;
      transition: all 0.3s ease;
      backdrop-filter: blur(10px);
      background: rgba(255,255,255,0.05);
    }

    .hero-cta:hover {
      background: rgba(255,255,255,0.1);
      border-color: rgba(255,255,255,0.5);
      transform: translateY(-2px);
    }

    /* About Section */
    .about {
      padding: 8rem 2rem;
      border-top: 1px solid #27272a;
    }

    .about-container {
      max-width: 1400px;
      margin: 0 auto;
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 8rem;
      align-items: start;
    }

    .about-greeting {
      font-size: clamp(2.5rem, 4vw, 3.5rem);
      font-weight: 400;
      margin-bottom: 2rem;
      letter-spacing: -0.02em;
      line-height: 1.2;
    }

    .about-text {
      font-size: 1.25rem;
      line-height: 1.6;
      color: #a1a1aa;
      max-width: 500px;
    }

    @media (max-width: 1024px) {
      .about-container {
        grid-template-columns: 1fr;
        gap: 4rem;
      }
    }

    .about-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 3rem;
    }

    .about-item h3 {
      font-size: 1.125rem;
      font-weight: 600;
      margin-bottom: 0.5rem;
    }

    .about-item p {
      color: #a1a1aa;
      line-height: 1.6;
    }

    /* Clients Section */
    .clients {
      padding: 4rem 0;
      border-top: 1px solid #27272a;
      overflow: hidden;
    }

    .clients-container {
      max-width: 1400px;
      margin: 0 auto;
    }

    .clients-label {
      text-align: center;
      color: #71717a;
      margin-bottom: 3rem;
      font-size: 0.875rem;
      text-transform: uppercase;
      letter-spacing: 0.1em;
    }

    .clients-marquee {
      position: relative;
    }

    .clients-track {
      display: flex;
      gap: 4rem;
      animation: marquee 30s linear infinite;
    }

    .client-name {
      font-size: 2rem;
      font-weight: 700;
      color: #27272a;
      white-space: nowrap;
      transition: color 0.3s ease;
    }

    .client-name:hover {
      color: #52525b;
    }

    @keyframes marquee {
      0% {
        transform: translateX(0);
      }
      100% {
        transform: translateX(-50%);
      }
    }

    /* Projects Section */
    .projects {
      padding: 8rem 2rem;
      border-top: 1px solid #27272a;
    }

    .projects-container {
      max-width: 1400px;
      margin: 0 auto;
    }

    .projects-title {
      font-size: 3rem;
      font-weight: 900;
      margin-bottom: 4rem;
      letter-spacing: -0.02em;
    }

    .projects-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
      gap: 2rem;
    }

    .project-card {
      text-decoration: none;
      color: white;
      display: block;
      transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .project-card:hover .project-image {
      transform: scale(1.05);
      filter: grayscale(0%);
    }

    .project-image-wrapper {
      position: relative;
      padding-bottom: 75%;
      overflow: hidden;
      border-radius: 12px;
      background: #18181b;
      margin-bottom: 1.5rem;
    }

    .project-image {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: all 0.7s cubic-bezier(0.4, 0, 0.2, 1);
      filter: grayscale(100%);
    }

    .project-info {
      padding: 0 0.5rem;
    }

    .project-meta {
      display: flex;
      justify-content: space-between;
      margin-bottom: 0.5rem;
      color: #71717a;
      font-size: 0.875rem;
    }

    .project-card h3 {
      font-size: 1.5rem;
      font-weight: 600;
      margin-bottom: 0.25rem;
      letter-spacing: -0.02em;
    }

    .project-category {
      color: #a1a1aa;
      font-size: 1rem;
    }

    /* Contact Section */
    .contact {
      padding: 8rem 2rem;
      border-top: 1px solid #27272a;
    }

    .contact-container {
      max-width: 1400px;
      margin: 0 auto;
      text-align: center;
    }

    .contact-title {
      font-size: clamp(2.5rem, 6vw, 5rem);
      font-weight: 900;
      margin-bottom: 1rem;
      letter-spacing: -0.02em;
    }

    .contact-subtitle {
      font-size: 1.25rem;
      color: #a1a1aa;
      margin-bottom: 3rem;
    }

    .contact-link {
      font-size: 2rem;
      color: white;
      text-decoration: none;
      transition: opacity 0.3s ease;
      display: inline-block;
      margin-bottom: 2rem;
    }

    .contact-link:hover {
      opacity: 0.7;
    }

    .contact-socials {
      display: flex;
      justify-content: center;
      gap: 2rem;
    }

    .social-link {
      color: #a1a1aa;
      text-decoration: none;
      transition: color 0.3s ease;
    }

    .social-link:hover {
      color: white;
    }

    /* Responsive */
    @media (max-width: 1024px) {
      .hero-container {
        grid-template-columns: 1fr;
      }

      .hero-visual {
        display: none;
      }

      .projects-grid {
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      }
    }

    @media (max-width: 768px) {
      .hero-title {
        font-size: clamp(2.5rem, 10vw, 4rem);
      }

      .about-text {
        font-size: 1.125rem;
      }

      .projects-grid {
        grid-template-columns: 1fr;
      }

      .contact-link {
        font-size: 1.5rem;
      }
    }
  </style>

  <script>
    import gsap from 'gsap';
    import { ScrollTrigger } from 'gsap/ScrollTrigger';

    gsap.registerPlugin(ScrollTrigger);

    // Hero animations
    gsap.from('.hero-name', {
      y: 50,
      opacity: 0,
      duration: 1.2,
      ease: 'power4.out',
    });

    gsap.from('.hero-role', {
      y: 30,
      opacity: 0,
      duration: 1,
      delay: 0.2,
      ease: 'power3.out',
    });

    gsap.from('.hero-cta', {
      y: 20,
      opacity: 0,
      duration: 1,
      delay: 0.4,
      ease: 'power3.out',
    });

    // Projects animation
    const projectCards = document.querySelectorAll('.project-card');
    projectCards.forEach((card, index) => {
      gsap.from(card, {
        scrollTrigger: {
          trigger: card,
          start: 'top bottom-=100',
          toggleActions: 'play none none reverse',
        },
        y: 50,
        opacity: 0,
        duration: 0.8,
        delay: index * 0.1,
        ease: 'power3.out',
      });
    });

    // About section animation
    gsap.from('.about-greeting', {
      scrollTrigger: {
        trigger: '.about',
        start: 'top center',
      },
      y: 50,
      opacity: 0,
      duration: 1,
      ease: 'power3.out',
    });

    gsap.from('.about-text', {
      scrollTrigger: {
        trigger: '.about',
        start: 'top center',
      },
      y: 30,
      opacity: 0,
      duration: 1,
      delay: 0.2,
      ease: 'power3.out',
    });

    gsap.from('.about-item', {
      scrollTrigger: {
        trigger: '.about-grid',
        start: 'top center+=100',
      },
      y: 30,
      opacity: 0,
      duration: 0.8,
      stagger: 0.1,
      ease: 'power3.out',
    });
  </script>
</MinimalLayout>